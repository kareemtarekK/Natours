extends baseEmail
block content
    span.preheader This is preheader text. Some clients will show this text as a preview.
    table.main(role="presentation", border="0", cellpadding="0", cellspacing="0")
        tr
            td.wrapper
                p Hi #{firstname}
                p= subject
                table.btn.btn-primary(role="presentation", border="0", cellpadding="0", cellspacing="0")
                    tbody
                        tr
                            td(align="left")
                                table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                                    tbody
                                        tr
                                            td
                                                a(href=`${url}`, target="_blank") reset password
                p if you forgot your password? submit patch request for that url with your new password and password confirm if you don't forgot your password ignore that email
                p Good luck! Hope it works.
        .footer
            table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                tr
                    td.content-block
                        span.apple-link natours family
                        br
                tr
                    td.content-block.powered-by
