extends baseEmail
block content
    span.preheader This is preheader text. Some clients will show this text as a preview.
    table.main(role="presentation", border="0", cellpadding="0", cellspacing="0")
        // START MAIN CONTENT AREA
        tr
            td.wrapper
                p Hi #{firstname}
                p= subject
                table.btn.btn-primary(role="presentation", border="0", cellpadding="0", cellspacing="0")
                    tbody
                        tr
                            td(align="left")
                                table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                                    tbody
                                        tr
                                            td
                                                a(href=`${url}`, target="_blank") Choose Your Photo
                p This is a really simple email template. It&apos;s sole purpose is to get the recipient to click the button with no distractions.
                p Good luck! Hope it works.
        // END MAIN CONTENT AREA
        // START FOOTER
        .footer
            table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                tr
                    td.content-block
                        span.apple-link natours family
                        br
                tr
                    td.content-block.powered-by
                        | Powered by kareem tarek 55555
        // END FOOTER
        // END CENTERED WHITE CONTAINER