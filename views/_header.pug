header.header
    nav.header__nav
        a.nav__a.nav__a--click(href='/') All Tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.header__nav.nav
        if(user)
            a.header__login.header__btn--click.logout LOG OUT
            a.user__details(href='/me')
                img(src=`/img/users/${user.photo}` alt=`photo-${user.name}`)
                p.name= user.name.split(' ')[0]
        else
            a.header__login.header__btn--click(href='/login') LOG IN
            a.header__signup.header__btn--click(href='/signup') SIGN UP